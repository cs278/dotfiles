case $(hostname --domain) in
	*.kv-is.local|kv-is.local)
		EMAIL="chris.smith@widerplan.com"
	;;
	*.cs278.org|cs278.org)
		EMAIL="chris@cs278.org"
	;;
	*)
		echo "Unknown machine." >&2
	;;
esac

if [ -z "$USER" ] && [ ! -z "$LOGNAME" ];
then
	USER="$LOGNAME"
else
	if [ -z "$USER" ];
	then
		# Both USER and LOGNAME are empty.
		USER="$(id -nu)"
	fi

	LOGNAME="$USER"
fi

export NAME="Chris Smith";
export EMAIL;
export USER;
export LOGNAME;
