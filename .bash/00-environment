# Standard environment settings

case $(hostname --domain) in
	*.kv-is.local|kv-is.local)
		EMAIL="chris.smith@widerplan.com"
	;;
	*.cs278.org|cs278.org)
		EMAIL="chris@cs278.org"
	;;
	*)
		echo "Unknown machine." >&2
	;;
esac

export NAME="Chris Smith";
export EMAIL;

# I'm a simpleton
export EDITOR="nano";

if [ -n "$DISPLAY" ];
then
	# If running inside a graphical session adjust some settings.

	if which subl >/dev/null 2>&1;
	then
		# Use Sublime
		VISUAL="subl --new-window --wait"
	elif which gedit >/dev/null 2>&1;
	then
		# Or gedit
		VISUAL="gedit --standalone --wait"
	fi
fi

if [ -n "$VISUAL" ];
then
	export VISUAL
fi

# Ignore EOF until 3 key presses.
export IGNOREEOF="2"

# Set up language environment
export LANG=${LANG:-en_GB.UTF-8}
